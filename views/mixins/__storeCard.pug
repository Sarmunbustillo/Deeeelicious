mixin storeCard(store= {})
    .store
        .store__hero
            .store__actions
                button soon
            img(src=`/uploads/${store.photo || 'store.png'}` alt="store photo")
            h2.title
                a(href=`/store/${store.slug}`) #{store.name}
        .store__details
            P= store.description.split(' ').slice(0,25).join(' ')  